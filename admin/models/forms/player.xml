<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />
		<field name="lastname" type="text" class="inputbox" size="60" label="COM_TTLIVESCORE_FIELD_LASTNAME_LABEL" description="COM_TTLIVESCORE_FIELD_LASTNAME_DESC" required="true" />
		<field name="firstname" type="text" class="inputbox" size="60" label="COM_TTLIVESCORE_FIELD_FIRSTNAME_LABEL" description="COM_TTLIVESCORE_FIELD_FIRSTNAME_DESC" required="true" />
		<field name="middlename" type="text" class="inputbox" size="20" label="COM_TTLIVESCORE_FIELD_MIDDLENAME_LABEL" description="COM_TTLIVESCORE_FIELD_MIDDLENAME_DESC" />
		<field name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="sex" type="list" label="COM_TTLIVESCORE_FIELD_SEX_LABEL" description="COM_TTLIVESCORE_FIELD_SEX_DESC" class="inputbox" size="1" required="true">
			<option value="M">COM_TTLIVESCORE_SEX_MALE</option>
			<option value="W">COM_TTLIVESCORE_SEX_FEMALE</option>
		</field>
		<field name="dateofbirth" type="calendar" label="COM_TTLIVESCORE_FIELD_DATEOFBIRTH_LABEL" description="COM_TTLIVESCORE_FIELD_DATEOFBIRTH_DESC" class="inputbox" size="22" filter="user-utc" />
		<field name="image" type="media" directory="ttlivescore" hide_none="1" label="COM_TTLIVESCORE_FIELD_IMAGE_LABEL" description="COM_TTLIVESCORE_FIELD_IMAGE_DESC" size="40" />
		<field name="country" type="Countries" class="inputbox" label="COM_TTLIVESCORE_FIELD_COUNTRY_LABEL" description="COM_TTLIVESCORE_FIELD_COUNTRY_DESC" size="1" required="true" />
	</fieldset>
</form>